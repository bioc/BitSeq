#/bin/sh

SAMVARS=`echo 'cat(system.file("usretc", .Platform[["r_arch"]] , "Rsamtools.mk", package="Rsamtools", mustWork=TRUE))' | "${R_HOME}/bin/R" --vanilla --slave`

echo "# This file is automatically generated by configure script during installation" > src/Makevars
echo "include ${SAMVARS}" > src/Makevars
echo "include Makevars.common" >> src/Makevars

